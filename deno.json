{
	"tasks": {
		"dev": "deno run --unstable --allow-read=/var/run/docker.sock --allow-write=/var/run/docker.sock --allow-net --allow-env=PORT,HEADSCALE_SERVER_URL --watch main.ts",
		"test": "deno test --parallel --allow-read --allow-net --allow-env",
		"build": "ENV=production deno compile --output headscale-controller --allow-read=/app/acls.json --allow-net --allow-env=PORT,HEADSCALE_SERVER_URL main.ts"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 240,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	}
}
